<h1>Delete Event</h1>

<form method="post">
    @foreach (var evt in ViewBag.review)
    {
        <div class="form-group">
            <label>
                <span>@evt.Review</span>
                <input type="checkbox" name="reviewId" value="@evt.ReviewId" class="form-control">
            </label>
        </div>
    }

    <input type="submit" value="Delete Selected Encounters" class="btn btn-danger">

</form>