@{
}
@model supernaturalsightings_olivia.ViewModels.AddReviewViewModel

<h1>Add a Weird Encounter</h1>

<form asp-controller="Home" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input class="form-control" asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Categories"></label>
        <input class="form-control" asp-for="Categories" />
        <span asp-validation-for="Categories" class="text-danger"></span>
    </div>

    <input type="submit" value="Add Encounter" />
</form>