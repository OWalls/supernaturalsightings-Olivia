@model supernaturalsightings_olivia.ViewModels.AddReviewViewModel

<h1>Tell us your Weirdest Reviews</h1>

<div class="card">
    <form asp-controller="Review" asp-action="ProcessAddReviewForm" method="post">


        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username"></span>
        </div>
        <div class="form-group">
            <label asp-for="ReviewTitle">Review Title</label>
            <input asp-for="ReviewTitle" class="form-control" />
            <span asp-validation-for="ReviewTitle"></span>
        </div>
        <div class="form-group">
            <label asp-for="ReviewComment">Review Comment</label>
            <input asp-for="ReviewComment" class="form-control" />
            <span asp-validation-for="ReviewComment"></span>
        </div>

        <input type="submit" value="Add Review" />
    </form>
</div>