@model List<supernaturalsightings_olivia.Models.Review>

<h1>Tell us your Weirdest Reviews</h1>

<p>
    <a asp-controller="Review" asp-action="Add">Add your review here</a>
</p>

<p>
    <a asp-controller="Review" asp-action="Delete">Need to delete your review?</a>
</p>

@if (Model.Count == 0)
{
    <p>No Weird Reviews yet</p>
}
else
{
    <table class="table">
        <tr>

            <th>
                Username
            </th>
            <th>
                Get Descriptive
            </th>
            <th>
                Category of Weird
            </th>
        </tr>

        @foreach (Review review in Model)
        {
            <tr>

                <td>@review.Username</td>
                <td>@review.Description</td>
                <td>@review.ReviewCategory</td>
               
            </tr>
        }
    </table>
}