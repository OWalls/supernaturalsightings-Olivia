<div id="favoritecard" class="card blink2"> 
    <h1 class="display-4 text-center">My Favorite Sightings</h1>
    <p class="text-muted text-center">
        Here is a list of your favorite supernatural sightings!
    </p>
    <br/>
    <div class="container d-flex justify-content-center">
        <div class="smallalien"></div>
        <div class="alien m-1"></div>
        <div class="smallalien"></div>

    </div>

    <br/>
    <br/>

    @if (ViewBag.UserFavorites != null)
    {
        foreach (var favorite in ViewBag.UserFavorites)
        {
            <div class="clearfix mt-40">
                <div class="xsearch-items">
                    <div class="search-item">

                        <!--Displays images for the different entities-->
                        <div class="search-item-img">
                            @if (@favorite.Type == "Alien")
                            {
                                <img src="~/Images/alien.png" alt="alien" height="60px" width="60px">
                            }
                            else if (@favorite.Type == "Ghost")
                            {
                                <img src="~/Images/ghost.png" alt="ghost" height="60px" width="60px">
                            }
                            else if (@favorite.Type == "Bigfoot")
                            {
                                <img src="~/Images/foot.png" alt="feet" height="60px" width="60px">
                            }
                        </div>

                        <div class="search-item-content">
                            <!--Displays Name-->
                            <h2 class="display-6" style="font-size: 25px">@favorite.Name</h2>

                            <!--Displays Type, City, State, Ratings/Reviews-->
                            <div class="search-item-meta mb-15">
                                <ul class="list-inline">
                                    <li>@favorite.Type - @favorite.City, @favorite.State</li>
                                    <li><a href="#">Ratings/Reviews</a></li>
                                </ul>
                            </div>

                            <!--Displays Description-->
                            <div>
                                @favorite.Description

                            </div>
                            <br />
                            <div>
                                <form method="post" action="/UserSightFavorite/RemoveFavorite">
                                    <input type="hidden" name="formSightId" value="@favorite.Id" />
                                    <input class="filter_btn" onclick="changeRemoveButton(@favorite.Id)" type="submit" value="Remove from Favorites" id="filter_btn_@(favorite.Id)" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />

        }
    }

</div>
    

