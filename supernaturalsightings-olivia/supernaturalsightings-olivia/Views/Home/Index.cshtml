@model List<supernaturalsightings_olivia.Models.Review>

<h1>Tell us your Weirdest Reviews</h1>

<p>
    <a asp-controller="Reviews" asp-action="Add">Add your review here</a>
</p>

<p>
    <a asp-controller="Reviews" asp-action="Delete">Need to delete your review?</a>
</p>

@if (Model.Count == 0)
{
    <p>No Weird Reviews yet</p>
}
else
{
    <table class="table">
        <tr>

            <th>
                Username
            </th>
            <th>
                Get Descriptive
            </th>
            <th>
                Category of Weird
            </th>
        </tr>

        @foreach (var evt in Model)
        {
            <tr>

                <td><a asp-controller="Events" asp-action="Detail" asp-route-id="@evt.Id">@evt.UserName</a></td>
                <td>@evt.Description</td>
                <td>@evt.Category.ReviewType</td>
            </tr>
        }
    </table>
}*@