@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}
<partial name="_StatusMessage" for="StatusMessage" />


<div id="profilecard" class="card blink2" style="border-radius: 6px;">
    <div class="row">
        <div class="col-md-2">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" id="profileLabel"></div>
                <div class="form-group">
                    <label asp-for="Input.DisplayName" class="form-control" id="profileLabel"></label>
                    <input asp-for="Input.DisplayName" class="form-label" />
                </div>
                <p>
                    <div class="form-group">
                        <label asp-for="Input.Bio" class="form-control" id="profileLabel"></label>
                        <textarea asp-for="Input.Bio" class="form-label" id="bioTextArea"></textarea>
                    </div>
                <p>
                    <div class="form-group">
                        <label asp-for="Input.Emoji" class="form-control" id="profileLabel">Choose your weird</label>
                        <select asp-for="Input.Emoji" id="Input.Emoji" name="Input.Emoji">
                            <option value="👽">👽</option>
                            <option value="👻">👻</option>
                            <option value="👾">👾</option>
                            <option value="👹">👹</option>
                            <option value="👿">👿</option>
                            <option value="🐙">🐙</option>
                            <option value="👺">👺</option>
                            <option value="☠️">☠️</option>
                        </select>
                    </div>
                <p>
                <p>
                    <button id="update-profile-button" type="submit" class="profileSaveButton">Save</button>
            </form>
        </div>
    </div>
</div>
